rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    function isOwner(uid) {
      return request.auth.uid == uid;
    }
    // TODO: Implement proper role-based access control (RBAC) via Custom Claims
    // For now, we assume 'admin' access for specific hardcoded UIDs or if valid auth (Phase 1-4 legacy)
    // Real implementation should use: request.auth.token.role == 'doctor'
    
    // --- PATIENTS ---
    match /patients/{uid} {
      allow read, write: if isAuthenticated() && isOwner(uid);
      allow read: if isAuthenticated(); // Providers need to read all patients (refine later)
    }

    // --- CONSULTATIONS ---
    match /consultations/{resultId} {
      allow read: if isAuthenticated() && (resource.data.uid == request.auth.uid || true); // Providers read all
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
    }

    // --- SAP NOTES (Provider Only) ---
    match /soap_notes/{noteId} {
      allow read, write: if isAuthenticated(); // Restricted to Providers in real prod
    }

    // --- LAB ORDERS ---
    match /lab_orders/{orderId} {
      allow read: if isAuthenticated() && (resource.data.patientId == request.auth.uid || true);
      allow create, update: if isAuthenticated();
    }
    
    // --- MESSAGING (HIPAA Compliant) ---
    // --- MESSAGING (HIPAA Compliant) ---
    match /conversations/{conversationId} {
      allow read: if isAuthenticated() && (request.auth.uid in resource.data.participants);
      allow create: if isAuthenticated() && (request.auth.uid in request.resource.data.participants);
      allow update: if isAuthenticated() && (request.auth.uid in resource.data.participants);

      match /messages/{messageId} {
        allow read, create: if isAuthenticated() && 
          (request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants);
      }
    }
  }
}
