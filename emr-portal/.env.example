# ---------------------------------------------
# Public client-side Firebase config (safe to expose)
# Copy values from Firebase Console > Project settings > General > Your apps
# ---------------------------------------------
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_web_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=1234567890
NEXT_PUBLIC_FIREBASE_APP_ID=1:1234567890:web:abcdef123456
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_web_push_certificate_key_pair_public_key

# Frontend URLs
NEXT_PUBLIC_BASE_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# ---------------------------------------------
# Server-side Firebase Admin credentials
# Required for protected Next.js API routes:
# /api/dashboard/provider
# /api/dashboard/appointments/[id]
# /api/temp/seed-provider-dashboard
#
# Choose ONE method:
#   A) FIREBASE_SERVICE_ACCOUNT_JSON
#   B) FIREBASE_CLIENT_EMAIL + FIREBASE_PRIVATE_KEY (+ FIREBASE_PROJECT_ID)
#   C) GOOGLE_APPLICATION_CREDENTIALS pointing to a service account json file
# ---------------------------------------------

# Method A (recommended for local dev in this repo)
# Paste raw JSON (single-line) or base64 encoded JSON
FIREBASE_SERVICE_ACCOUNT_JSON=

# Alternative JSON env name (useful on some deployment platforms)
GOOGLE_APPLICATION_CREDENTIALS_JSON=

# Method B (split env vars)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Method C (path to service account json on your machine)
# GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/service-account.json

# Token revocation check behavior:
# - true  => strict revocation checks (recommended for production)
# - false => skip revocation checks (useful for local development)
FIREBASE_VERIFY_REVOKED_TOKENS=false
